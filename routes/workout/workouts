// Update a workout
router.put('/:id', cors(corsOptions), function(req, res, next) {
  const id = req.params.id;
  const { workoutId,WorkoutDate,notes } = req.body;
  
  connection.query(
    'UPDATE memberWorkOut SET workout_date = ?,notes=? WHERE id = ?',
    [muscle_name, id],
    function(err, result, fields) {
      if (!err) {
        if (result.affectedRows === 0) {
          res.status(404).json({
            success: false,
            message: 'Workout not found'
          });
        } else {
          res.json({
            success: true,
            message: 'Workout updated successfully'
          });
        }
      } else {
        next(err);
      }
    }
  );
});

// DELETE a workout
router.delete('/:id', cors(corsOptions), function(req, res, next) {
  const id = req.params.id;
  
  connection.query('DELETE FROM memberWorkOut WHERE id = ?', [id], function(err, result, fields) {
    if (!err) {
      if (result.affectedRows === 0) {
        res.status(404).json({
          success: false,
          message: 'Workout not found'
        });
      } else {
        res.json({
          success: true,
          message: 'Workout deleted successfully'
        });
      }
    } else {
      next(err);
    }
  });
});

module.exports = router;